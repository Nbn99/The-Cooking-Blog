<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/categories.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <div class="container">
            <div class="one_category_name">
                <p >Search Results: <%= searchTerm %> </p>  
            </div>
               
                <div class="all_category_div">
                    <% if(article !='' ) { %>
                        <% article.forEach(function(article, index){ %>
                            <a href="/articles/<%= article.slug %>" class="all_category_link">
                                <div class="all_category_img">
                                    <img class="all_category_image" src="/<%= article.img %>" alt="<%= article.title %>">
                                  </div>
                                  <div class="article_title all_category_name">
                                    <%= article.title %>
                                </div>
                            </a>
                            <% }) %>
                                <% } else { %>
                                    <p class="category_no_item">No Article found.</p>
                                    
                                    <% } %>
                </div>
        </div>
        

            <%- include('../includes/end.ejs') %>