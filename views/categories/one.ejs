<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
            <% if(typeof category !=='undefined' && category != '') { %>               
                        <div class="category__img shadow">
                            <img src="/<%= category.img %>" alt="<%= category.name %>" loading="lazy">
                        </div>
                        <div class="pt-1"><%= category.name %></div>
                        <div class="pt-1"><%= category.description %></div>
                        <% } %>
        </div>


        <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
            <% if(typeof articles !=='undefined' && articles != '') { %>
                <% articles.forEach(function(article, index){ %>
                    <a href="/articles/<%= article._id %>" class="col text-center category__link">
                        <div class="category__img category__img--large shadow">
                            <img src="/<%= article.img %>" alt="<%= article.title %>" loading="lazy">
                        </div>
                        <div class="pt-1">
                            <%= article.title %>
                        </div>
                    </a>
                    <% }) %>
                        <% } else { %>
                            <p>No items found.</p>
                            <% } %>
        </div>
            <%- include('../includes/end.ejs') %>