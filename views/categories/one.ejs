<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/categories.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <div class="container">
           
                <% if(typeof category !=='undefined' && category != '') { %>   
                    <p class="one_category_name"><%= category.name %></p>   
                    <div class="one_category">         
                            <div class="display_category_div ">
                                <img class="all_category_image" src="/<%= category.img %>" alt="<%= category.name %>" loading="lazy">
                            </div>
                            <div class="one_category_description"><%= category.description %></div>
                            <% } %>
                            <% if (isAuthenticated) { %>
                                <div class="one_category_buttons">
                                    <a href="/categories/edit/<%= category._id %>" class="btn_edit"> Edit</a>
                                    <form action="/categories/<%= category._id %>?_method=DELETE" method="POST" class="d-inline">
                                      <button type="submit" class="btn_delete">Delete</button>
                                    </form>
                                </div>
                                
                                <% } %>
                        </div>
    
    
            <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
                <% if(typeof articles !=='undefined' && articles != '') { %>
                    <% articles.forEach(function(article, index){ %>
                        <a href="/articles/<%= article._id %>" class="col text-center category__link">
                            <div class="category__img category__img--large shadow">
                                <img src="/<%= article.img %>" alt="<%= article.title %>" loading="lazy">
                            </div>
                            <div class="pt-1">
                                <%= article.title %>
                            </div>
                        </a>
                        <% }) %>
                            <% } else { %>
                                <p>No items found.</p>
                                <% } %>
            </div>
        </div>

        
            <%- include('../includes/end.ejs') %>