<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/categories.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <div class="container">
           
            <% if(typeof category !=='undefined' && category != '') { %> 
                    <div class="one_category_name">
                        <p ><%= category.name %></p>  
                    </div>  
                     
                    <div class="one_category">         
                            <div class="display_category_div ">
                                <div class="one_category_image_div">
                                     <img class="all_category_image" src="/<%= category.img %>" alt="<%= category.name %>" loading="lazy">
                                </div>
                                <% if (isAuthenticated) { %>
                                <div class="one_category_buttons">
                                    <a href="/categories/edit/<%= category.slug %>" class=" description_button btn_edit"> Edit</a>
                                    <form action="/categories/<%= category.slug %>?_method=DELETE" method="POST" class="d-inline">
                                      <button type="submit" class="description_button btn_delete">Delete</button>
                                    </form>
                                </div>
                                 <% } %>
                            </div>
                            
                             <div class="one_category_description"><%= category.description %> </div>
                    </div>
    
    
                    <div class="all_category_div">
                        <% if(typeof articles !=='undefined' && articles != '') { %>
                            <% articles.forEach(function(article, index){ %>
                                <a href="/articles/<%= article.slug %>" class="all_category_link">
                                    <div class="all_category_img">
                                        <img class="all_category_image" src="/<%= article.img %>" alt="<%= article.title %>" loading="lazy">
                                    </div>
                                    <div class="all_category_name">
                                        <%= article.title %>
                                    </div>
                                </a>
                            <% }) %>
                        <% } else { %>
                            <p class="category_no_item">No Article found.</p>
                        <% } %>
                    </div>
            <% } %>
        </div>

        
            <%- include('../includes/end.ejs') %>