<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

   <div class="container">
    <div class="signup_container_center">
        <div class="signup_container">
            <div >
                <p class="signup_title">Update your password!</p>
            </div>
            <main class="signup_form">
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error errors "><%= errorMessage %></div>
                <% } %>
                <form class="login-form" action="/users/new-password" method="POST">
                    <div class="form-control">
                        <label class="signup_label" for="password">Password</label>
                        <input class="signup_input" type="password" name="password" id="password">
                    </div>
                    <input  type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                    <button class="btn_update_password" type="submit">Update Password</button>
                </form>
            </main>
        </div>
    </div>
   </div>

    
<%- include('../includes/end.ejs') %>