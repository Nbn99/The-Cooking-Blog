<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <div class="container"> 
        <div class="signup_container_center">
            <div class="signup_container">
                <div >
                    <p class="signup_title">Reset Your Password</p>
                </div>
                <main class="signup_form">
                    <% if (errorMessage) { %>
                        <div class="user-message user-message--error errors"><%= errorMessage %></div>
                    <% } %>
                    <form class="login-form" action="/users/reset-password" method="POST">
                        <div class="form-control">
                            <label class="signup_label" for="email">E-Mail</label>
                            <input class="signup_input" type="email" name="email" id="email">
                        </div>
                        <button class="btn_reset_password" type="submit">Reset Password</button>
                    </form>
                </main>
            </div>
            
        </div>
        
    </div>
    
<%- include('../includes/end.ejs') %>