<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<script src="/js/validSignup.js"></script>

</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="container">
    <div class="signup_container_center">
      <div class="signup_container">
        <div>
          <p class="signup_title">Sign Up!</p>
        </div>
        
        <main class="signup_form">
          
          <% if (errorMessage) { %>
            <div class="user-message user-message--error errors"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/users/signup" method="POST" name="myForm" onsubmit="return validateForm()">
          <div class="form-control">
            <label class="signup_label" for="email">E-Mail</label>
            <input 
                class="signup_input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" 
                name="email" 
                id="email" 
                value="<%= oldInput.email %>">
        </div>
        <div class="form-control">
            <label class="signup_label" for="password">Password</label>
            <input 
                class="signup_input <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                type="password" 
                name="password" 
                id="password" 
                value="<%= oldInput.password %>">
        </div>
        <div class="form-control">
            <label class="signup_label for="confirmPassword>Confirm Password</label>
            <input 
                class="signup_input <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                type="password" 
                name="confirmPassword" 
                id="confirmPassword" 
                value="<%= oldInput.confirmPassword %>">
        </div>
        <div class="form_btn_group">
          <button class="btn_submit" type="submit">Signup</button>
          <a href="/articles" class="btn_cancel "> Home</a>
        </div>
            
            
          </form>
        </main>
      </div>
    </div>
   
  </div>
  
  
 

  <%- include('../includes/end.ejs') %>